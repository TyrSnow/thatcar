/* pages/index/index.wxss */
.p-loading {
  text-align: center;
}
.p-loading .loading {
  animation: loading 2000ms infinite; 
}
.p-loading .icon-loading {
  font-size: 30pt;
}
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.bar {
  width: 100%;
  padding: 2vw 5vw;
  box-sizing: border-box;
  /* position: fixed;
  left: 0; */
  text-align: right;
}
.m-trip {
  width: 100%;
  height: calc(100vh - 10vw);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.m-trip .remain {
  text-align: center;
  margin-top: 20pt;
}
.m-trip .remain .tip {
  margin-bottom: 8pt;
}
.m-trip .remain .time {
  font-size: 26pt;
}
.m-trip .control {
  margin-bottom: 10pt;
}
.m-trip .btn {
  margin: 10pt 0;
}