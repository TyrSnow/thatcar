/* pages/index/index.wxss */
.page {
  font-size: 12pt;
}
.p-loading {
  text-align: center;
}
.p-loading .loading {
  animation: loading 2000ms infinite; 
}
.p-loading .icon-loading {
  font-size: 30pt;
}
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.btn.btn-primary {
  width: 30vw;
  height: 30vw;
  line-height: 30vw;
  border-radius: 100%;
  font-size: 12pt;
  border: 1px solid #666;
}
.bar {
  width: 100%;
  padding: 2vw 5vw;
  box-sizing: border-box;
  /* position: fixed;
  left: 0; */
  text-align: right;
}
.m-info {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10pt;
}
.m-info .avatar {
  width: 16vw;
  height: 16vw;
  border-radius: 100%;
  overflow: hidden;
  border: 1px solid #999;
  margin-right: 10pt;
  flex-shrink: 0;
  margin-bottom: -5pt;
}
.m-info .name {
  width: 100%;
  color: #E66747;
}
.m-info .gpsStatus {
  color: #666;
  margin-right: 8pt;
}
.m-info .gpsStatus.active {
  color: #38F758;
}
.m-info .setting {
  width: 16pt;
  height: 16pt;
  position: relative;
  top: 2pt;
}
.m-trip {
  width: 100%;
  height: calc(100vh - 10vw);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.m-trip .remain {
  text-align: center;
  margin-top: 20pt;
}
.m-trip .remain .tip {
  margin-bottom: 8pt;
}
.m-trip .remain .time {
  font-size: 26pt;
}
.m-trip .control {
  margin-bottom: 10pt;
}
.m-trip .btn {
  margin: 10pt 0;
}