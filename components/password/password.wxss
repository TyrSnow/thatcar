/* components/password/password.wxss */
.m-password {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
}
.m-password.active {

}
.m-password .title {
  text-align: center;
  margin-bottom:-25vh;
}
.m-password .preview {
  text-align: center;
}
.m-password .preview .inner {
  display: inline-flex;
  font-size: 20pt;
  text-align: center;
  padding: 0 10pt;
}
.m-password .preview .num {
  margin: 0 2pt;
}
.m-password .keyboard {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  margin: 10pt 7vw;
}
.m-password .keyboard .key {
  width: 20vw;
  height: 20vw;
  flex-shrink: 0;
  border: 1px solid #FFF;
  border-radius: 100%;
  text-align: center;
  line-height: 20vw;
  margin: 2vw 4vw;
  font-size: 10vw;
}
