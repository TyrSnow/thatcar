<view class="line">
  <text class="iconfont icon-{{icon}}"></text>
  <input
    class="edit"
    value="{{text}}"
    type="{{type}}"
    placeholder="{{placeholder}}"
    bindinput="handleTypeIn"
  />
  <text
    class="iconfont icon-cancel"
    wx:if="{{dirty}}"
    bindtap="handleReset"
  ></text>
  <text
    class="iconfont icon-ok"
    wx:if="{{dirty}}"
    bindtap="applyChange"
  ></text>
</view>
